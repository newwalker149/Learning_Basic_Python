def computepay(hours, rate):
    if fh > 40:
        rpayment = rate * hours
        opayment = (hours - 40) * (rate * 0.5)
        pay = rpayment + opayment
    else:
        pay = hours * rate
    return pay

sh = input('Enter Hours: ')
sr = input('Enter Rate: ')
fh = float(sh)
fr = float(sr)


xp = computepay(fh, fr)
print('Pay', xp)
